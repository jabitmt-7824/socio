<link rel="stylesheet" type="text/css" href="/css/home.css">
<main id="home-main">
<section id="feed-posts">
    <h1>welcome</h1>
    <h4>Posts</h4>
    <% if(locals.user){ %>
    <form action="/post/create" id="new-post-form" method="POST">
        <textarea name="content" cols="30" rows="3" placeholder="Type Here..." required></textarea>
        <input type="submit" value="Post">
    </form>
    <% } %>

    <div id="posts-list-container">
        <ul>
            <% for(post of posts){ %>
                <%- include("_post") -%>
            <%} %>
        </ul>
    </div>
</section>

<% if(locals.user){ %>
<section id="friends-users">
<section id="friends-list">
    <h4><u>Friends:</u></h4>
    <ul>
        <% for(let friend of all_friends.friends){ %>
            <li>
                <a href="/user/profile/<%= friend.to_user._id %>"><%= friend.to_user.name %></a>
            </li>
        <%}%>
    </ul>
</section>
<section id="users-list">
    <h4><u>Users:</u></h4>
    <ul>
        <% for(let usr of all_users){ 
          if(usr.id == locals.user.id)
          {
              continue;
          }  
        %>
        <li>
            <a href="/user/profile/<%= usr.id %>"><%= usr.name %></a>
        </li>
        <%}%>
    </ul>
</section>
</section>
<% } %>
</main>
<script src="/js/home_post.js"></script>
<script src="/js/home_comment.js"></script>
